<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="500dp"/>
            <solid android:color="#09D835"/>
            <stroke
                android:width="3dip"
                android:color="#E91E63"/>
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="500dp"/>
            <solid android:color="#ADADAD"/>
            <stroke
                android:width="3dip"
                android:color="#3EFF08"/>
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"/>
        </shape>
    </item>

</selector>
